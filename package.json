{
  "name": "my-dairy",
  "version": "1.0.0",
  "description": "MyDiary is an online journal where users can pen down their thoughts and feelings. ",
  "main": "server.js",
  "scripts": {
    "start": "node server/helpers/www",
    "create-table": "node --require babel-register server/helpers/table_schemas/createTables",
    "start-dev": "nodemon server/helpers/www",
    "drop-test-table": "node --require babel-register server/helpers/table_schemas/dropTables",
    "test": "npm run drop-test-table && nyc --reporter=text --reporter=html mocha --require babel-register server/test/* --exit",
    "coverage": "nyc --reporter=html --reporter=text --reporter=lcov mocha --reporter spec --require babel-register server/test/* --exit",
    "coveralls": "npm run drop-test-table && npm run coverage -- --report lcovonly && cat coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Victor-Ugwueze/MyDiary.git"
  },
  "author": "Victor Ugwueze",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Victor-Ugwueze/MyDiary/issues"
  },
  "homepage": "https://github.com/Victor-Ugwueze/MyDiary#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-preset-airbnb": "^2.5.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2"
  },
  "dependencies": {
    "airbnb-browser-shims": "^3.0.0",
    "bcrypt": "^3.0.0",
    "body-parser": "^1.18.3",
    "coveralls": "^3.0.2",
    "express": "^4.16.3",
    "express-validator": "^5.2.0",
    "favicons": "^5.1.1",
    "jsonwebtoken": "^8.3.0",
    "morgan": "^1.9.0",
    "node-cron": "^1.2.1",
    "nodemailer": "^4.6.7",
    "pg": "^7.4.3",
    "swagger-ui-express": "^3.0.10"
  }
}
